{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "es2015",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": [
      "src",
      "stories"
    ],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "react"
    ],
    "typeRoots": [
      "./node_module/@types",
      "./types"
    ],
    "paths": {
      "@storyRoot/*": [
        "./stories/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "stories/**/*"
  ],
  "files": [
    "./types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}